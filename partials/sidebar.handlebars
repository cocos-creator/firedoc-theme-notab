<div id="api-list" style="height:100%">
  <div id="api-tabview" class="tabview" style="height:100%">
    <div id="api-tabview-filter">
      <input type="search" id="api-filter" placeholder="Type to filter APIs">
    </div>
    <div id="api-tabview-panel">
      <ul id="api-items" class="apis items">
      {{#globals.modules}}
        <li>
          <div class="api-list-item-clickable wave-btn">
            <a class="module" href="{{project.base}}/modules/{{name}}.html">{{namespace}}</a>
            <i class="flag">module</i>
          </div>
          <div class="members-list hidden">
            {{> sidebar-members}}
          </div>
        </li>
      {{/globals.modules}}
      {{#globals.classes}}
        <li>
          <div class="api-list-item-clickable wave-btn">
            {{#if isEnum}}
              <a class="enum" 
                href="{{project.base}}/modules/{{name}}.html" 
                title="{{namespace}}">{{namespace}}</a>
              <i class="flag">enum</i>
            {{else}}
              <a class="class" 
                href="{{project.base}}/classes/{{name}}.html" 
                title="{{namespace}}">{{namespace}}</a>
              <i class="flag">class</i>
            {{/if}}
          </div>
          <div class="members-list hidden">
            {{> sidebar-members}}
          </div>
        </li>
      {{/globals.classes}}
      </ul>
    </div>
  </div>
</div>
